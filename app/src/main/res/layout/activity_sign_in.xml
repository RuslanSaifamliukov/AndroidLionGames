<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBG"
    tools:context=".SignIn">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-325dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:src="@drawable/backlogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="251dp"
                android:layout_height="310dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:src="@drawable/enterlogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/textName"
                android:layout_width="329dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/textlogin"
                android:drawableStart="@drawable/entry"
                android:drawablePadding="10dp"
                android:hint="Логин"
                android:inputType="textEmailAddress"
                android:paddingStart="30dp"
                android:textAllCaps="false"
                android:textColor="@color/Entry"
                android:textColorHint="@color/Entry"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/textName2"
                android:layout_width="329dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonpass"
                android:drawableStart="@drawable/key"
                android:drawablePadding="10dp"
                android:hint="Пароль"
                android:paddingStart="30dp"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EditText" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonentry"
                android:onClick="next"
                android:text="Продолжить"
                android:textAllCaps="false"
                android:textColor="@color/Entry"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EditText2" />

            <TextView
                android:id="@+id/TextView"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="90dp"
                android:text="Забыли пароль?"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TextView2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="175dp"
                android:layout_marginTop="-103dp"
                android:onClick="recovery"
                android:text="Восстановить пароль"
                android:textAllCaps="false"
                android:textColor="@color/PassRe"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextView" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>